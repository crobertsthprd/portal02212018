         INNER JOIN REG REG ON PATRONS.PATRONID=REG.PRIMARYPATRONID
         INNER JOIN VALIDASSESSMENTS VALIDASSESSMENTS ON PATRONS.PATRONID=VALIDASSESSMENTS.PRIMARYPATRONID
